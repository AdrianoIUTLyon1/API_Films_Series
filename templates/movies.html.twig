{% extends 'base.html.twig' %}





{% block body %}


{% for movie in movies %}
<div class="table-responsive small">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Header</th>
              <th scope="col">Header</th>
              <th scope="col">Header</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><p class="movieTitle">{{movie.title}}</p></td>
              <td><img src='{{movie.image}}' class="moviePicture"/></td>
              <td><p>{{movie.video}}</p></td>
              <td><p class="text-limited">{{movie.synopsis}}</p></td>
            </tr>
          </tbody>
        </table>
      </div>
{%endfor%}

{%endblock%}